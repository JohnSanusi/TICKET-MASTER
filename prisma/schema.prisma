// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id            String         @id @default(cuid())
  artistName    String?        // Artist/Performer name
  title         String         // Event name
  description   String
  location      String
  date          String
  time          String
  image         String?
  section       String?        // Section (e.g., "A", "VIP", etc.)
  ticketType    String?        // Ticket type (e.g., "VIP", "General Admission")
  level         String?        // Level (e.g., "Floor", "Balcony", "Upper")
  seatMap       String         @default("[]") // JSON array of seats
  hasTimer      Boolean        @default(false)
  eventDate     String?        // YYYY-MM-DD format
  eventTime     String?        // HH:mm format
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  seats         Seat[]
  claimedSeats  ClaimedSeat[]
}

model Seat {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  row       String   // A, B, C, etc.
  seatNum   Int      // 1, 2, 3, etc.
  available Boolean  @default(true)
  createdAt DateTime @default(now())

  @@unique([eventId, row, seatNum])
}

model ClaimedSeat {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  seatRow   String
  seatNum   Int
  email     String
  name      String
  ticketId  String   @unique
  createdAt DateTime @default(now())
}
